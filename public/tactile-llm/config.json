{
  "$schema": "https://raw.githubusercontent.com/revisit-studies/study/dev/src/parser/StudyConfigSchema.json",
  "studyMetadata": {
    "title": "HTML as a Stimulus",
    "version": "pilot",
    "authors": [
      "The reVISit Team"
    ],
    "date": "2023-04-14",
    "description": "A simple demo of using stimuli in an HTML file that renders a D3 visualization. Data is collected via a numeric response field.",
    "organizations": [
      "University of Utah",
      "WPI",
      "University of Toronto"
    ]
  },
  "uiConfig": {
    "contactEmail": "contact@revisit.dev",
    "helpTextPath": "demo-html/assets/help.md",
    "logoPath": "revisitAssets/revisitLogoSquare.svg",
    "withProgressBar": true,
    "autoDownloadStudy": false,
    "withSidebar": false,
    "windowEventDebounceTime": 200
  },
  "components": {
    "introduction": {
      "type": "markdown",
      "path": "tactile-llm/assets/introduction.md",
      "response": []
    },
    "prePrompt": {
      "type": "markdown",
      "required": false,
      "path": "tactile-llm/assets/systemPrompt.md",
      "response": [
      {
          "id": "q-prePrompt",
          "prompt": "Test Different System Prompts (This question is only for the Chart Learning Chatbot). It will be removed in the real study.",
          "location": "belowStimulus",
          "type": "longText",
          "placeholder": "Please enter the system prompt for the LLM.",
          "required": false
      }
    ]
  },
    "learn": {
      "type": "react-component",
      "path": "tactile-llm/assets/LLMInterface.tsx",
      "recordAudio": true,
      "response": [],
      "parameters": {
        "chartType": "violin-plot",
        "modality": "tactile"
      }
    },
    "simpleAltText": {
      "type": "react-component",
      "path": "tactile-llm/assets/LLMInterfaceSimpleAltText.tsx",
      "recordAudio": true,
      "response": [],
      "parameters": {
        "chartType": "violin-plot",
        "modality": "tactile"
      }
    },
    "test": {
      "type": "react-component",
      "path": "tactile-llm/assets/LLMInterfaceTest.tsx",
      "recordAudio": true,
      "response": [],
      "parameters": {
        "chartType": "violin-plot",
        "modality": "tactile"
      }
    }
  },
  "sequence": {
    "order": "fixed",
    "components": [
      "introduction",
      "prePrompt",
      "learn",
      "simpleAltText",
      "test"
    ]
  }
}
